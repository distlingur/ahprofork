    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Hafa Samband</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <fieldset>

                        @using (Html.BeginForm())
                        {

                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Nafnið þitt" })
                                        @Html.ValidationMessageFor(m => m.FromName)

                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Þitt netfang *" })
                                        @Html.ValidationMessageFor(m => m.FromEmail)
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.subject, new { @class = "form-control", placeholder = "Viðfangsefni *" })
                                        @Html.ValidationMessageFor(m => m.subject)
                                        <p class="help-block text-danger"></p>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Skilaboð*" })
                                        @Html.ValidationMessageFor(m => m.Message)
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">

                                    <div class="col-lg-12 text-center">
                                        <div id="success"></div>

                                        <button type="submit" class="btn btn-xl" value="Send">Senda Skilaboð</button>
                                        <p>@ViewBag.result<p />

                                    </div>
                                </div>
                            </div>
                        }</fieldset>

    
</div>
            </div>
        </div>

        

    </section>
    </body>

